{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "saveAndRun": {
        "commands": [
            {
                "useShortcut": false,
                "silent": false,
                "match": "(.*).py$",
                "cmd": "pytest --cov-report term --cov-report xml:coverage.xml --cov=src"
            },
            {
                "useShortcut": true,
                "silent": false,
                "match": "(.*).py$",
                "cmd": "coverage-gutters.watchCoverageAndVisibleEditors"
            }
        ]
    }
}