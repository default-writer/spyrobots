    "version": "2.0.0",
    "configurations": [
        {
            "label": "Update code coverage",
            "type": "shell",
            "command": "pytest --cov-report term --cov-report xml:coverage.xml --cov=src",
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "options":{
                "statusbar": {
                    "tooltip" : "Coverage"
                }
            }
        },
    ]
}
